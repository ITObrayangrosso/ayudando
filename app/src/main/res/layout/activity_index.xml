<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".index">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:padding="20dp"
        style="@style/contenLogin">
        <ImageView
            android:id="@+id/logoLogin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"/>
        <EditText
            android:layout_below="@+id/logoLogin"
            android:id="@+id/emailLogin"
            style="@style/ImputTextWhite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Correo"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/passwordLogin"
            style="@style/ImputTextWhite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/emailLogin"
            android:hint="Contraseña"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/registrarse"
            style="@style/bottonBlue"
            android:layout_below="@+id/passwordLogin"

            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Registrarse"
            android:layout_marginTop="20dp"
            android:clickable="true"/>
        <Button
            android:id="@+id/iniciarLogin"
            style="@style/bottons"
            android:layout_below="@+id/passwordLogin"
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Iniciar"
            android:layout_marginTop="20dp"
            android:clickable="true"/>
        <Button
            android:id="@+id/olvidoContraseña"
            style="@style/bottonBlue"
            android:layout_below="@+id/registrarse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Recuperar Contraseña"
            android:layout_marginTop="20dp"
            android:clickable="true"/>
    </RelativeLayout>
</LinearLayout>